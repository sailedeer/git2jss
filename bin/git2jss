#!/usr/bin/env ruby
require 'git2jss' # => this is the gem itself
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: git2jss [options]"

  opts.on("-fFILE", "--file=FILE", "File to upload to the JSS") do |f|
    options[:file] = f
  end

  opts.on("")
end.parse!


